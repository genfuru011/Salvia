<div class="flex min-h-screen bg-slate-50 font-sans">
  <!-- Sidebar -->
  <%= render partial: "shared/sidebar" %>

  <!-- Main Content -->
  <main class="flex-1 md:ml-64 p-8">
    <!-- Header -->
    <header class="flex justify-between items-center mb-8">
      <div class="flex items-center gap-4">
        <button class="p-2 bg-white border border-slate-200 rounded-md text-slate-500 md:hidden">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
        </button>
        <div class="flex items-center gap-2 text-slate-400 text-sm">
          <span class="p-1.5 bg-white border border-slate-200 rounded-md"><svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="7" height="7"></rect><rect x="14" y="3" width="7" height="7"></rect><rect x="14" y="14" width="7" height="7"></rect><rect x="3" y="14" width="7" height="7"></rect></svg></span>
          <span class="font-medium text-slate-900">Dashboard</span>
        </div>
      </div>
      
      <div class="flex items-center gap-4">
        <div class="relative">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
          <input type="text" placeholder="Search anything..." class="pl-9 pr-4 py-2 bg-white border border-slate-200 rounded-md text-sm w-64 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 placeholder-slate-400">
          <span class="absolute right-3 top-1/2 -translate-y-1/2 text-xs text-slate-400 border border-slate-200 rounded px-1.5 py-0.5">⌘1</span>
        </div>
        <button class="p-2 bg-white border border-slate-200 rounded-md text-slate-500 relative hover:bg-slate-50 transition-colors">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path><path d="M13.73 21a2 2 0 0 1-3.46 0"></path></svg>
          <span class="absolute top-1.5 right-2 w-2 h-2 bg-red-500 rounded-full border border-white"></span>
        </button>
      </div>
    </header>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <%= island "StatsCard", title: "Total Products", value: "234", change: "+8%", trend: "up", subtext: "+22 new this week" %>
      <%= island "StatsCard", title: "Trials in pipeline", value: "142", change: "+2%", trend: "up", subtext: "+1 new this week" %>
      <%= island "StatsCard", title: "Revenue in pipeline", value: "$2.34M", change: "+23%", trend: "up", subtext: "+$200k last month" %>
      <%= island "StatsCard", title: "Products sold", value: "12", change: "2%", trend: "up", subtext: "+0 new this week" %>
    </div>

    <!-- Charts Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
      <div class="lg:col-span-2">
        <%= island "MainChart", data: @sales_data, labels: @sales_labels %>
      </div>
      <div>
        <%= island "RevenueChart" %>
      </div>
    </div>

    <!-- Transactions Table -->
    <div class="bg-white rounded-md border border-slate-100 shadow-sm overflow-hidden">
      <div class="p-6 border-b border-slate-50 flex justify-between items-center">
        <h3 class="font-medium text-slate-900">Transactions update</h3>
        <div class="flex items-center gap-4">
          <button class="flex items-center gap-2 px-3 py-1.5 bg-white border border-slate-200 rounded text-xs font-medium text-slate-600 hover:bg-slate-50 transition-colors">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
            Aug 04 - Aug 11 2023
          </button>
          <div class="relative">
             <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="absolute left-2.5 top-1/2 -translate-y-1/2 text-slate-400"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
             <input type="text" placeholder="Search..." class="pl-8 pr-12 py-1.5 bg-white border border-slate-200 rounded text-xs w-48 focus:outline-none focus:border-blue-500">
             <span class="absolute right-2 top-1/2 -translate-y-1/2 text-[10px] text-slate-400 border border-slate-200 rounded px-1 py-0.5">⌘1</span>
          </div>
          <button class="p-1.5 text-slate-400 hover:text-slate-600 border border-slate-200 rounded hover:bg-slate-50 transition-colors">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"></circle><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path></svg>
          </button>
        </div>
      </div>
      <table class="w-full text-sm text-left">
        <thead class="text-xs text-slate-500 bg-slate-50 border-b border-slate-100">
          <tr>
            <th class="px-6 py-3 font-medium"><input type="checkbox" class="rounded border-slate-300 text-blue-600 focus:ring-blue-500"></th>
            <th class="px-6 py-3 font-medium">Order Number <span class="ml-1 text-[10px]">↕</span></th>
            <th class="px-6 py-3 font-medium">Order Date <span class="ml-1 text-[10px]">↕</span></th>
            <th class="px-6 py-3 font-medium">Customer Name <span class="ml-1 text-[10px]">↕</span></th>
            <th class="px-6 py-3 font-medium">Total Amount <span class="ml-1 text-[10px]">↕</span></th>
            <th class="px-6 py-3 font-medium">Status <span class="ml-1 text-[10px]">↕</span></th>
            <th class="px-6 py-3 font-medium"></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-50">
          <tr class="hover:bg-slate-50/50 transition-colors">
            <td class="px-6 py-4"><input type="checkbox" class="rounded border-slate-300 text-blue-600 focus:ring-blue-500"></td>
            <td class="px-6 py-4 font-medium text-slate-900">#22314000</td>
            <td class="px-6 py-4 text-slate-500">19/10/2025</td>
            <td class="px-6 py-4 text-slate-500">Michael Jones</td>
            <td class="px-6 py-4 text-slate-900 font-medium">$32.45</td>
            <td class="px-6 py-4"><span class="px-2 py-1 rounded bg-green-100 text-green-700 text-xs font-medium">Successful</span></td>
            <td class="px-6 py-4 text-right"><button class="text-slate-400 hover:text-slate-600">⋮</button></td>
          </tr>
          <tr class="hover:bg-slate-50/50 transition-colors">
            <td class="px-6 py-4"><input type="checkbox" class="rounded border-slate-300 text-blue-600 focus:ring-blue-500"></td>
            <td class="px-6 py-4 font-medium text-slate-900">#22314001</td>
            <td class="px-6 py-4 text-slate-500">20/10/2025</td>
            <td class="px-6 py-4 text-slate-500">Sarah Williams</td>
            <td class="px-6 py-4 text-slate-900 font-medium">$45.00</td>
            <td class="px-6 py-4"><span class="px-2 py-1 rounded bg-green-100 text-green-700 text-xs font-medium">Successful</span></td>
            <td class="px-6 py-4 text-right"><button class="text-slate-400 hover:text-slate-600">⋮</button></td>
          </tr>
          <tr class="hover:bg-slate-50/50 transition-colors">
            <td class="px-6 py-4"><input type="checkbox" class="rounded border-slate-300 text-blue-600 focus:ring-blue-500"></td>
            <td class="px-6 py-4 font-medium text-slate-900">#22314002</td>
            <td class="px-6 py-4 text-slate-500">21/10/2025</td>
            <td class="px-6 py-4 text-slate-500">David Smith</td>
            <td class="px-6 py-4 text-slate-900 font-medium">$27.30</td>
            <td class="px-6 py-4"><span class="px-2 py-1 rounded bg-yellow-100 text-yellow-700 text-xs font-medium">Pending</span></td>
            <td class="px-6 py-4 text-right"><button class="text-slate-400 hover:text-slate-600">⋮</button></td>
          </tr>
          <tr class="hover:bg-slate-50/50 transition-colors">
            <td class="px-6 py-4"><input type="checkbox" class="rounded border-slate-300 text-blue-600 focus:ring-blue-500"></td>
            <td class="px-6 py-4 font-medium text-slate-900">#22314003</td>
            <td class="px-6 py-4 text-slate-500">22/10/2025</td>
            <td class="px-6 py-4 text-slate-500">Laura Brown</td>
            <td class="px-6 py-4 text-slate-900 font-medium">$50.75</td>
            <td class="px-6 py-4"><span class="px-2 py-1 rounded bg-red-100 text-red-700 text-xs font-medium">Failed</span></td>
            <td class="px-6 py-4 text-right"><button class="text-slate-400 hover:text-slate-600">⋮</button></td>
          </tr>
        </tbody>
      </table>
    </div>
  </main>
</div>
